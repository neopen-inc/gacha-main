{
  "name": "lib/common-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "lib/common-utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/lib/common-utils",
        "main": "lib/common-utils/src/index.ts",
        "tsConfig": "lib/common-utils/tsconfig.lib.json",
        "assets": ["lib/common-utils/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "lib/common-utils/**/*.ts",
          "lib/common-utils/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "lib/common-utils/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
